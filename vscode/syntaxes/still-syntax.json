{
  "fileTypes": [
    "lily"
  ],
  "name": "lily",
  "scopeName": "source.lily",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "match": "\\b(_)\\b",
      "name": "keyword.unused.lily"
    },
    {
      "include": "#colon-type-colon"
    },
    {
      "include": "#choice-declaration"
    },
    {
      "include": "#type-alias-declaration"
    },
    {
      "include": "#string-quote"
    },
    {
      "include": "#string-ticked-lines"
    },
    {
      "include": "#char"
    },
    {
      "comment": "Floats are always decimal",
      "match": "\\b([0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?|[0-9]+[eE][+-]?[0-9]+)\\b",
      "name": "constant.numeric.float.lily"
    },
    {
      "match": "\\b([0-9]+)\\b",
      "name": "constant.numeric.lily"
    },
    {
      "match": "\\b(0x[0-9a-fA-F]+)\\b",
      "name": "constant.numeric.lily"
    },
    {
      "include": "#record-prefix"
    },
    {
      "include": "#variant"
    },
    {
      "name": "meta.record.field.update.lily",
      "match": "(\\{)\\s+\\.\\.([a-z][a-zA-Z0-9-]*)\\s+(\\,)\\s+([a-z][a-zA-Z0-9-]*)",
      "captures": {
        "1": {
          "name": "punctuation.bracket.lily"
        },
        "2": {
          "name": "record.name.lily"
        },
        "3": {
          "name": "punctuation.dotdot.lily"
        },
        "4": {
          "name": "entity.name.record.field.lily"
        }
      }
    },
    {
      "name": "meta.record.field.update.lily",
      "match": "(,)\\s+([a-z][a-zA-Z0-9-]*)\\s+",
      "captures": {
        "1": {
          "name": "keyword.pipe.lily"
        },
        "2": {
          "name": "entity.name.record.field.lily"
        },
        "3": {
          "name": "keyword.operator.assignment.lily"
        }
      }
    },
    {
      "name": "meta.record.field.update.lily",
      "match": "(\\{)\\s+([a-z][a-zA-Z0-9-]*)\\s+$",
      "captures": {
        "1": {
          "name": "punctuation.bracket.lily"
        },
        "2": {
          "name": "record.name.lily"
        }
      }
    },
    {
      "name": "meta.record.field.lily",
      "match": "(\\{)\\s+([a-z][a-zA-Z0-9-]*)\\s+",
      "captures": {
        "1": {
          "name": "punctuation.bracket.lily"
        },
        "2": {
          "name": "entity.name.record.field.lily"
        },
        "3": {
          "name": "keyword.operator.assignment.lily"
        }
      }
    },
    {
      "name": "meta.record.field.lily",
      "match": "(,)\\s+([a-z][a-zA-Z0-9-]*)\\s+",
      "captures": {
        "1": {
          "name": "punctuation.separator.comma.lily"
        },
        "2": {
          "name": "entity.name.record.field.lily"
        },
        "3": {
          "name": "keyword.operator.assignment.lily"
        }
      }
    },
    {
      "match": "(\\}|\\{)",
      "name": "punctuation.bracket.lily"
    },
    {
      "include": "#comma"
    },
    {
      "include": "#parens"
    },
    {
      "match": "(>)",
      "name": "keyword.operator.arrow.lily"
    },
    {
      "match": "(\\=|\\:|\\||\\\\)",
      "name": "keyword.other.lily"
    },
    {
      "match": "\\b(type|choice)\\s+",
      "name": "keyword.other.lily"
    },
    {
      "match": "\\b(>|\\\\)\\s+",
      "name": "keyword.control.lily"
    },
    {
      "include": "#record-accessor"
    },
    {
      "include": "#top_level_value"
    },
    {
      "include": "#value"
    },
    {
      "include": "#period"
    },
    {
      "include": "#square_brackets"
    }
  ],
  "repository": {
    "comma": {
      "match": "(,)",
      "name": "punctuation.separator.comma.lily"
    },
    "parens": {
      "match": "(\\(|\\))",
      "name": "punctuation.parens.lily"
    },
    "comments": {
      "patterns": [
        {
          "captures": {
            "1": {
              "name": "punctuation.definition.comment.lily"
            }
          },
          "begin": "#",
          "end": "$",
          "name": "comment.line.lily"
        }
      ]
    },
    "string-quote": {
      "name": "string.quoted.double.lily",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.lily"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.lily"
        }
      },
      "patterns": [
        {
          "match": "\\\\(NUL|SOH|STX|ETX|EOT|ENQ|ACK|BEL|BS|HT|LF|VT|FF|CR|SO|SI|DLE|DC1|DC2|DC3|DC4|NAK|SYN|ETB|CAN|EM|SUB|ESC|FS|GS|RS|US|SP|DEL|[abfnrtv\\\\\\\"'\\&]|x[0-9a-fA-F]{1,5})",
          "name": "constant.character.escape.lily"
        },
        {
          "match": "\\^[A-Z@\\[\\]\\\\\\^_]",
          "name": "constant.character.escape.control.lily"
        }
      ]
    },
    "string-ticked-lines": {
      "name": "string.quoted.double.lily",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.lily"
        }
      },
      "end": "(\\r\\n|\\r|\\n)",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.lily"
        }
      },
      "patterns": []
    },
    "char": {
      "name": "string.quoted.single.lily",
      "begin": "'",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.char.begin.lily"
        }
      },
      "end": "'",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.char.end.lily"
        }
      },
      "patterns": [
        {
          "match": "\\\\(NUL|SOH|STX|ETX|EOT|ENQ|ACK|BEL|BS|HT|LF|VT|FF|CR|SO|SI|DLE|DC1|DC2|DC3|DC4|NAK|SYN|ETB|CAN|EM|SUB|ESC|FS|GS|RS|US|SP|DEL|[abfnrtv\\\\\\\"'\\&]|x[0-9a-fA-F]{1,5})",
          "name": "constant.character.escape.lily"
        },
        {
          "match": "\\^[A-Z@\\[\\]\\\\\\^_]",
          "name": "constant.character.escape.control.lily"
        }
      ]
    },
    "period": {
      "match": "[.]",
      "name": "keyword.other.period.lily"
    },
    "square_brackets": {
      "match": "[\\[\\]]",
      "name": "punctuation.definition.list.lily"
    },
    "record-prefix": {
      "match": "([a-z][a-zA-Z0-9-]*)(\\.)([a-z][a-zA-Z0-9-]*)",
      "name": "record.accessor.lily",
      "captures": {
        "1": {
          "name": "record.name.lily"
        },
        "2": {
          "name": "keyword.other.period.lily"
        },
        "3": {
          "name": "entity.name.record.field.accessor.lily"
        }
      }
    },
    "variant": {
      "match": "\\b[A-Z][a-zA-Z0-9-]*\\b",
      "name": "constant.type-variant.lily"
    },
    "value": {
      "match": "\\b[a-z][a-zA-Z0-9-]*\\b",
      "name": "meta.value.lily"
    },
    "top_level_value": {
      "match": "^[a-z][a-zA-Z0-9-]*\\b",
      "name": "entity.name.function.top_level.lily"
    },
    "record-accessor": {
      "match": "(\\.)([a-z][a-zA-Z0-9-]*)",
      "name": "meta.record.accessor",
      "captures": {
        "1": {
          "name": "keyword.other.period.lily"
        },
        "2": {
          "name": "entity.name.record.field.accessor.lily"
        }
      }
    },
    "colon-type-colon": {
      "begin": "^(:)",
      "end": "^(:)",
      "name": "meta.colon-type-colon.lily",
      "patterns": [
        {
          "match": "\\n\\s+",
          "name": "punctuation.spaces.lily"
        },
        {
          "match": "\\b[a-z][a-zA-Z0-9-]*\\b",
          "name": "storage.type.lily"
        },
        {
          "match": "\\b[A-Z][a-zA-Z0-9-]*\\b",
          "name": "variable.type.lily"
        },
        {
          "include": "#comments"
        },
        {
          "include": "#type-record"
        }
      ]
    },
    "choice-declaration": {
      "begin": "^(choice\\s+)([a-z][a-zA-Z0-9-]*)\\s+",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.lily"
        },
        "2": {
          "name": "storage.type.lily"
        }
      },
      "end": "^(?=\\S)",
      "name": "meta.function.choice-declaration.lily",
      "patterns": [
        {
          "name": "meta.record.field.lily",
          "match": "^\\s*([A-Z][a-zA-Z0-9-]*)\\b",
          "captures": {
            "1": {
              "name": "constant.type-variant.lily"
            }
          }
        },
        {
          "match": "\\s+",
          "name": "punctuation.spaces.lily"
        },
        {
          "name": "meta.record.field.lily",
          "match": "(\\=|\\|)\\s+([A-Z][a-zA-Z0-9-]*)\\b",
          "captures": {
            "1": {
              "name": "keyword.operator.assignment.lily"
            },
            "2": {
              "name": "constant.type-variant.lily"
            }
          }
        },
        {
          "match": ">",
          "name": "keyword.operator.arrow.lily"
        },
        {
          "match": "\\b[A-Z][a-zA-Z0-9-]*\\b",
          "name": "variable.type.lily"
        },
        {
          "match": "\\b[a-z][a-zA-Z0-9-]*\\b",
          "name": "storage.type.lily"
        },
        {
          "include": "#comments"
        },
        {
          "include": "#type-record"
        }
      ]
    },
    "type-alias-declaration": {
      "begin": "^(type\\s+)([a-z][a-zA-Z0-9-']*)\\s+",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.lily"
        },
        "2": {
          "name": "storage.type.lily"
        }
      },
      "end": "^(?=\\S)",
      "name": "meta.function.choice-declaration.lily",
      "patterns": [
        {
          "match": "\\n\\s+",
          "name": "punctuation.spaces.lily"
        },
        {
          "match": "\\=",
          "name": "keyword.operator.assignment.lily"
        },
        {
          "match": "\\b[a-z][a-zA-Z0-9-]*\\b",
          "name": "storage.type.lily"
        },
        {
          "match": "\\b[A-Z][a-zA-Z0-9-]*\\b",
          "name": "variable.type.lily"
        },
        {
          "include": "#comments"
        },
        {
          "include": "#type-record"
        }
      ]
    },
    "type-record": {
      "begin": "(\\{)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.section.braces.begin"
        }
      },
      "end": "(\\})",
      "endCaptures": {
        "1": {
          "name": "punctuation.section.braces.end"
        }
      },
      "name": "meta.function.type-record.lily",
      "patterns": [
        {
          "match": "\\\\",
          "name": "keyword.start.lambda.lily"
        },
        {
          "match": "\\s+",
          "name": "punctuation.spaces.lily"
        },
        {
          "match": ">",
          "name": "keyword.operator.arrow.lily"
        },
        {
          "name": "meta.record.field.lily",
          "match": "([a-z][a-zA-Z0-9-]*)\\s+",
          "captures": {
            "1": {
              "name": "entity.name.record.field.lily"
            },
            "2": {
              "name": "keyword.other.lily"
            }
          }
        },
        {
          "match": "\\,",
          "name": "punctuation.separator.comma.lily"
        },
        {
          "match": "\\.",
          "name": "punctuation.dotdot.comma.lily"
        },
        {
          "match": "\\b[a-z][a-zA-Z0-9-]*\\b",
          "name": "variable.type.lily"
        },
        {
          "match": "\\b[a-z][a-zA-Z0-9-]*\\b",
          "name": "storage.type.lily"
        },
        {
          "include": "#comments"
        },
        {
          "include": "#type-record"
        }
      ]
    },
    "type": {
      "patterns": [
        {
          "match": ">",
          "name": "keyword.operator.arrow.lily"
        },
        {
          "match": "\\s+",
          "name": "punctuation.spaces.lily"
        },
        {
          "match": "\\b[A-Z][a-zA-Z0-9-]*\\b",
          "name": "variable.type.lily"
        },
        {
          "match": "\\b[a-z][a-zA-Z0-9-]*\\b",
          "name": "storage.type.lily"
        },
        {
          "include": "#comma"
        },
        {
          "include": "#parens"
        },
        {
          "include": "#comments"
        },
        {
          "include": "#type-record"
        }
      ]
    }
  }
}